{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "啟動擴充功能",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceRoot}"
            ],
            "stopOnEntry": false,
            "sourceMaps": true,
            "outDir": "${workspaceRoot}/out",
            "preLaunchTask": "npm"
        },
        {
            "name": "Launch Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8100/",
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}"
        }
    ]
}